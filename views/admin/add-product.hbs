<div class="row container d-flex justify-content-center">
    <div class="col-md-3 mt-5">
        <form action="/admin/add-products" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input name="name" class="form-control" type="text" placeholder="Name" aria-label="name">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <input name="category" class="form-control" type="text" placeholder="Category" aria-label="category">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input name="price" class="form-control" type="number" placeholder="Price" aria-label="price">
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input name="description" class="form-control" type="text" placeholder="Description"
                    aria-label="description">
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input name="image" class="form-control" type="file" id="formFile">
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>