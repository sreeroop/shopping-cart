<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <a href="/admin/add-products" type="button" class="btn btn-success">ADD</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">image</th>
                </tr>
            </thead>
            {{#each products}}
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.description}}</td>
                    <td>
                        <img style="width: 50px;height: 50px; " src="/product-image/{{this._id}}.png">
                    </td>
                    <td>
                        <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
                        <a class="btn btn-danger" onclick="return confirm('r u sure')"
                            href="/admin/delete-product/{{this._id}}">Delete</a>
                    </td>
                </tr>

            </tbody>
            {{/each}}
        </table>
    </div>
</section>